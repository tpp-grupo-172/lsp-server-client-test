{
  "name": "my-lsp-extension",
  "displayName": "My LSP Extension",
  "description": "VS Code client for my custom Rust LSP server",
  "version": "0.0.1",
  "publisher": "yourname",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
        {
          "command": "myLspServer.showGraph",
          "title": "Show Dependency Graph"
        }
    ],
    "languages": [
      {
        "id": "plaintext",
        "aliases": [
          "Plain Text"
        ],
        "extensions": [
          ".txt"
        ]
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.3.0"
  }
}
